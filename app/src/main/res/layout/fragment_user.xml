<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_background">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        app:elevation="@dimen/widget_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                app:layout_collapseMode="parallax"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:id="@+id/user_iv_appbar"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:collapseIcon="@mipmap/ic_launcher"
                app:layout_collapseMode="pin">
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user_btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_camera"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        android:clickable="true"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="@dimen/widget_elevation"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/cardview_radius"
            app:cardElevation="@dimen/widget_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground"
                android:clickable="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_user"
                        android:id="@+id/imageView"
                        android:layout_below="@+id/textView"
                        android:padding="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:id="@+id/textView"
                        android:layout_alignParentTop="true"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/textsize_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/textView"
                        android:layout_toEndOf="@+id/imageView"
                        android:layout_alignBottom="@+id/imageView"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/textsize_primary"
                        android:textColor="@color/color_primary_text" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/color_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:clickable="false">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_computer"
                        android:id="@+id/imageView2"
                        android:layout_below="@+id/textView2"
                        android:padding="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在行业"
                        android:id="@+id/textView2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/imageView2"
                        android:gravity="center"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/textsize_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行业"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/textView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_alignBottom="@+id/imageView2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/textsize_primary"
                        android:textColor="@color/color_primary_text" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/color_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_android"
                        android:id="@+id/imageView3"
                        android:layout_below="@+id/textView3"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职业经历"
                        android:id="@+id/textView3"
                        android:layout_alignEnd="@+id/imageView3"
                        android:gravity="center"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/textsize_secondary"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位"
                        android:id="@+id/textView8"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/imageView3"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_alignBottom="@+id/imageView3"
                        android:textSize="@dimen/textsize_primary"
                        android:textColor="@color/color_primary_text" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/color_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:clickable="false">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_school"
                        android:id="@+id/imageView4"
                        android:layout_below="@+id/textView4"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教育经历"
                        android:id="@+id/textView4"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/imageView4"
                        android:gravity="center"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/textsize_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校 · 专业"
                        android:id="@+id/textView9"
                        android:layout_below="@+id/textView4"
                        android:layout_toEndOf="@+id/imageView4"
                        android:layout_alignBottom="@+id/imageView4"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textSize="@dimen/textsize_primary"
                        android:textColor="@color/color_primary_text" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/color_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_introduction"
                        android:id="@+id/imageView5"
                        android:layout_below="@+id/textView5"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人描述"
                        android:id="@+id/textView5"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/imageView5"
                        android:gravity="center"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/textsize_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写代码的"
                        android:id="@+id/textView10"
                        android:layout_below="@+id/textView5"
                        android:layout_toEndOf="@+id/imageView5"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_alignBottom="@+id/imageView5"
                        android:textSize="@dimen/textsize_primary"
                        android:textColor="@color/color_primary_text" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>